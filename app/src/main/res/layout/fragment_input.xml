<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_dynamic_primary90"
    android:padding="12dp">

    <!-- ========== UPPER HALF: Input Fields ========== -->
    <LinearLayout
        android:id="@+id/inputSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonGrid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/inputVp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="分数"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/inputCoin"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="金币"
            android:inputType="number" />

        <EditText
            android:id="@+id/inputWorker"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="工人"
            android:inputType="number" />

        <EditText
            android:id="@+id/inputPriest"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="祭司"
            android:inputType="number" />

        <EditText
            android:id="@+id/inputPower1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:hint="魔力1"
            android:inputType="number" />

        <EditText
            android:id="@+id/inputPower2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:hint="魔力2"
            android:inputType="number" />

        <EditText
            android:id="@+id/inputPower3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:hint="魔力3"
            android:inputType="number" />

    </LinearLayout>

    <!-- ========== LOWER HALF: Button Grid ========== -->
    <LinearLayout
        android:id="@+id/buttonGrid"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputSection">

        <!-- Example Buttons -->
        <Button
            android:id="@+id/btnSelectChar"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="角色"
            android:textSize="12sp" />

        <ToggleButton
            android:id="@+id/tbEarth1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="土1"
            android:textOff="土1"
            android:textOn="土1"
            android:textSize="12sp" />

        <ToggleButton
            android:id="@+id/tbHydro1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="水1"
            android:textOff="水1"
            android:textOn="水1"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnScoring"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="加分片"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnBonus"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="特权片"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnApply"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#95AAF2"
            android:text="应用"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
