<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/material_dynamic_primary90"
    android:orientation="vertical"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <!-- A grabber handle to indicate it's a bottom sheet -->

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/drag_handle"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:paddingBottom="0dp"
        android:scaleType="center" />

    <!-- Content from fragment_input.xml is now inlined here -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <LinearLayout
            android:id="@+id/buttonGrid"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:layout_constraintBottom_toTopOf="@+id/inputSection"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvIndex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="0"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnSelectChar"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_weight="1"
                android:text="角色"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnFavor"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_weight="1"
                android:text="神恩片"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnScoring"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_weight="1"
                android:text="加分片"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnBonus"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_weight="1"
                android:text="特权片"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnApply"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_weight="1"
                android:backgroundTint="#95AAF2"
                android:text="应用"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/inputSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonGrid">

            <EditText
                android:id="@+id/inputVp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="分数"
                android:inputType="number"
                android:text="100" />

            <EditText
                android:id="@+id/inputCoin"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="金币"
                android:inputType="number"
                android:text="10" />

            <EditText
                android:id="@+id/inputWorker"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="工人"
                android:inputType="number"
                android:text="8" />

            <EditText
                android:id="@+id/inputPriest"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="祭司"
                android:inputType="number"
                android:text="3" />

            <EditText
                android:id="@+id/inputPower1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:hint="魔力1"
                android:inputType="number"
                android:text="2" />

            <EditText
                android:id="@+id/inputPower2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:hint="魔力2"
                android:inputType="number"
                android:text="4" />

            <EditText
                android:id="@+id/inputPower3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:hint="魔力3"
                android:inputType="number"
                android:text="6" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- This view contains the content that will be revealed on expansion -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/btnStronghold"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/strongholds"
                    android:text="ToggleButton"
                    android:textOff="未有要塞"
                    android:textOn="要塞" />

                <ToggleButton
                    android:id="@+id/btnSanctuary"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/sanctuarys"
                    android:text="ToggleButton"
                    android:textOff="未有圣殿"
                    android:textOn="有圣殿" />
            </LinearLayout>

            <!-- RATING BARS SECTION -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/tradingHouseRatingContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/thframe" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/thframe" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/thframe" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/thframe" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/templeRatingContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/templeframe" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/templeframe" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/templeframe" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dwellingRatingContainer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/dwellingframe" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/dwellingframe" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/dwellingframe" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/dwellingframe" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/dwellingframe" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/dwellingframe" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/dwellingframe" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/dwellingframe" />

            </LinearLayout>

            <!-- SLIDERS FOR SHOVEL AND SHIPPING -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/shovel" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderShovel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:stepSize="1.0"
                    android:valueFrom="1.0"
                    android:valueTo="3.0" />

                <TextView
                    android:id="@+id/tvShovelLevel"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    tools:text="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/shipping" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderShipping"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:stepSize="1.0"
                    android:valueFrom="0.0"
                    android:valueTo="3.0" />

                <TextView
                    android:id="@+id/tvShippingLevel"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    tools:text="0" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
